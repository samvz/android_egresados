<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            app:srcCompat="@mipmap/transparencia" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seguimiento de Egresados"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:text="Universidad Peruana Union"
                    android:fontFamily="cursive"
                    android:textAlignment="center"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnimgentrar1"
                    android:layout_width="158dp"
                    android:layout_height="176dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/boton_redondo"
                    app:srcCompat="@mipmap/icon1" />

                <ImageButton
                    android:id="@+id/btnimgentrar2"
                    android:layout_width="142dp"
                    android:layout_height="169dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    android:layout_marginRight="50dp"
                    android:background="@drawable/boton_redondo"
                    android:padding="5dp"
                    app:srcCompat="@mipmap/icon2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnimgentrar3"
                    android:layout_width="158dp"
                    android:layout_height="149dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"

                    app:srcCompat="@mipmap/icon4" />

                <ImageButton
                    android:id="@+id/btnimgentrar4"
                    android:layout_width="145dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/boton_redondo"
                    app:srcCompat="@mipmap/icon3" />
            </LinearLayout>


        </LinearLayout>
        <Button
            android:id="@+id/btncerrarsesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Session"
            tools:layout_editor_absoluteY="632dp"
            android:background="@drawable/radio"
            android:textColor="#F7F6F0"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>